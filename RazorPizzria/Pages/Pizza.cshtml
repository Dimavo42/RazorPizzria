@page
@model RazorPizzria.Pages.PizzaModel
@{
}

<div class="text-center">
	<div class="mainText">
		<h1 class="display-4 text-capitalize text-black">Our greate selecetion</h1>
		<h4>Choese one</h4>
		<p class="smallText"><i>Only one pizza</i></p>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-12 mb-5 mt-5">
				<div class="w-100 row makeYourOwnDiv">
						<div class="col-4">
							<img src="~/images/Pizzas/download (2).jpeg" class="w-100"/>
						</div>
						<div class="col-8 align-items-center">
							<div class="align-middle makeYourOwnText">
								<h3 style="text-align:left;">Create your own pizza</h3>
								<p style="text-align:left;">Make your own pizza</p>
								<a class="btn btn-primary mt-1" style="float: left"
								   asp-area="" asp-page="Forms/CustomPizza">Try Now</a>
							</div>
						</div>
					</div>
			</div>
			
				@foreach (var pizza in Model.PizzaDB)
				{
				var PhotoPath = "~/images/Pizzas/" + (pizza.ImageTitle + ".jpeg");
				<div class="col-4 mb-5">
					<img src="@PhotoPath" class="w-100" asp-append-version=true />
					<a class="btn btn-primary mt-1" 
					asp-area="" 
					asp-page="CheckOut/Checkout" 
					asp-route-ImageTitle ="@pizza.ImageTitle"
					asp-route-PizzaName="@pizza.PizzaName"
					asp-route-PizzaPrice="@pizza.FinalPrice">Get This Pizza</a>
					<br />
				</div>	
				}
			</div>
		</div>
	</div>
</div>